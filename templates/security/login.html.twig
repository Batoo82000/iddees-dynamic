{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css')}}">
{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <div class="login_form_group">
        <div class="login_form_group_nickname">
            <label for="inputNickName">Utilisateur</label>
            <input type="text" value="{{ last_username }}" name="nickName" id="inputNickName" class="form-control" autocomplete="nickName" required autofocus>
        </div>
        <div class="login_form_group_password">
            <label for="inputNickName">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>
        <button class="login_btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</form>
{% endblock %}
